<style type="text/css">
th,td
{
    padding:0 15px 0 15px;
}
</style>



<p id="notice"><%= notice %></p>

<h1>Post Queue</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th>Description</th>
      <th>Expiration Date</th>
      <th>Offer Type</th>
      <th>Tags</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr class="post_queue">
        <td><%= post.title %></td>
        <td><%= post.location %></td>
        <td><%= post.description %></td>
        <td><%= post.expire_date.strftime("%a %m/%d/%y") %></td>
        <td><%= post.offer_type %></td>
        <td><%= post.get_comma_separated_tags %></td>
        <td>
          <%= link_to 'Show', post %><br />
          <%= link_to 'Edit', edit_post_path(post) %>
        </td>
        <td>
          <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %><br />
          <%= link_to 'Approve', approve_path(post) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Approved Posts', posts_path%>
